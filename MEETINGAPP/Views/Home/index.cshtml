@Model MeetingInfo
@{
    ViewBag.Title = "Toplanti Basvuru";
    Layout = "_Layout2";
}

<main class="text-center">
<h1 class="h4">@ViewData["Salamlama"]</h1>
<p>Toplanti Katilim Durumunuzu bildiriniz<p/>

    <div class="card my-2">
       <ul class="list-group list-group-flush">

           <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date.ToString("yyyy-MM-dd HH:mm:ss") tarihinde gerceklesecek</li>
        <li class="list-group-item">@Model.NumberofPeople Katilimci</li>
       </ul>
    </div>
<a class="btn btn-sm btn-outline-primary"href="/meeting/apply">Basvuru Yap</a>
</main>